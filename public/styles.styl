html
  height 100%

body
  min-height 100%
  position relative
  padding-bottom 125px
  
table
  table-layout fixed
  word-wrap break-word

.holo
  margin 0
  padding 0px 7px 0px 4px
  background bottom left linear-gradient(#44aaff, #44aaff) no-repeat, bottom center linear-gradient(#44aaff, #44aaff) repeat-x, bottom right linear-gradient(#44aaff, #44aaff) no-repeat
  background-size 2px 9px, 2px 2px, 2px 9px

.spaced
	margin-top 16px
  
.fairly-spaced
  margin-top 54px
  
.very-spaced
  margin-top 200px

.padded
	padding-top 16px
  
.fairly-padded
  padding-top 54px

.very-padded
  padding-top 200px

.footer
  position absolute
  right 0
  bottom 20px
  left 0
  border 0
  padding 0
  text-align center

#eight-display-container
  border 0
  padding 0
  margin 30px auto 0 auto
  width 470px
  height 73px

.eight-display
  float left
  border 3px ridge #c8c8c8
  width 58px
  height 58px
  margin 18px
  background-color #080808
  color #080808
  font-weight bold
  font-size 38px
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: -moz-none;
  -o-user-select: none;
  user-select: none;

#eight-button
  border-radius 50%
  behavior url(PIE.htc)
  width 88px
  height 88px
  background #f8f8f8
  border 2px solid #d8d8d8
  font-size 62px
  font-weight bold
  color #e84848
  margin 50px auto 0 auto
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: -moz-none;
  -o-user-select: none;
  user-select: none;